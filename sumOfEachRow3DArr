using System;

namespace Coding.Exercise
{
    public class Exercise
    {
        public void PrintRowSums()
        {
            // Step 1: Declare and initialize a 3x3 two-dimensional array
            int[,] arr = {
                { 1, 2, 3 },
                { 4, 5, 6 },
                { 7, 8, 9 }
            };

            // Step 2: Loop through each row and calculate the sum
            for (int i = 0; i < 3; i++)
            {
                int rowSum = 0; // Initialize sum for each row
                for (int j = 0; j < 3; j++)
                {
                    rowSum += arr[i, j]; // Sum elements of the current row
                }
                // Step 3: Print the sum of the current row
                Console.WriteLine(rowSum);
            }
        }
    }
}
